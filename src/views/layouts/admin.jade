        script.
            $(document).ready(function (){
                var url = window.location.href;
                $('ul.nav li a').each(function(){
                    if(url == this.href) {
                        $(this).parent().addClass('active');
                    }
                });
                $('ul.nav li a').click(function(){
                    $('ul.nav li a').each(function(){
                        $(this).parent().removeClass('active');
                    });
                    $(this).parent().addClass('active');
                });
            });